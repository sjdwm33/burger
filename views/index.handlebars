<div class = "container">
	<div class = "jumbotron text-center">
	<h1 ><span class="glyphicon glyphicon-cutlery"></span>Eat-Da-Burger!</h1>
	</div>

	<div class = "row">
		<div class = "col-lg-6">
			<h2>Burgers to eat</h2>
			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button type="submit" class = "btn btn-primary">Devour it!</button>
			        </form>
			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>
		</div>
		<div class = "col-lg-6">
			<h2>Burgers already devoured</h2>

			<ul>
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			        {{this.burger_name}}
			      </li>
			    {{/if}}
			  {{/each}}
			</ul>
		</div>
	</div>

	<div class = "row text-center">
		<h2>Add a  Burger</h2>
		<form method="POST" action="/" class="button-size">
			<textarea type="text" name="burger_name"></textarea>
			<br>
			<button type="submit" class = "btn btn-success">Submit!</button>
		</form>
	</div>
</div>
